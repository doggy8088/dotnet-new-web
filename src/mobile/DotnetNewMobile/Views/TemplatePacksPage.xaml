<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DotnetNewMobile.TemplatePacksPage"
             x:Name="TemplatePacksPage">

    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="Large" Text="dotnet new template packs"/>
            <ListView x:Name="TemplatePacksListView"
                      ItemsSource="{Binding Items}"
                      VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image Grid.Row="0" Grid.Column="0" WidthRequest="40" 
                                       VerticalOptions="Center"
                                       Source="{Binding IconPngUrl}"  />
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Package}" 
                                       VerticalOptions="Center" LineBreakMode="NoWrap" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
