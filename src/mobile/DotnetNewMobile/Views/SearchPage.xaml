<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:local="clr-namespace:DotnetNewMobile"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DotnetNewMobile.Views.SearchPage"
             Title="Search">
    <ContentPage.Content>
        <StackLayout Margin="10,20,10,0">

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Entry x:Name="entrySearch" BackgroundColor="#ccffff" WidthRequest="200"  />
                <Button Text="Search"  
                        BackgroundColor="{StaticResource Primary}" TextColor="White" WidthRequest="100" FontFamily="{Binding FontFamily}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</local:BaseContentPage>
